
      <div class="books-wrapper">
        <% books.each do |book| %>
          <div class="book-container">
            <div class="card shadow-sm">
              <%= link_to book_path(book.id), class:"card" do%>
                <img src="https://img.youtube.com/vi/<%= "#{book.youtube_id}" %>/mqdefault.jpg" />
              <% end %>
              <%= link_to book_path(book.id), class:"body-link" do%>
              <div class="card-body">
                <div class="card-text">
                  <div class="card-title">
                    <%= book.title %>
                  </div>
                  <div class="card-description">
                    <%= book.description %>
                  </div>
                </div>
                <div class="d-flex justify-content-start align-items-center">
                  <div class="btn-group">
                    <%= link_to "Edit", edit_book_path(book.id), class:"btn btn-sm btn-outline-secondary"%>
                    <%= link_to "delete", book_path(book.id), method: :delete, data: { confirm: '本当にこのBookを削除しますか？'},  class:"btn btn-sm btn-outline-secondary"%>
                  </div>
                </div>
                <div class="d-flex justify-content-end align-items-end mt-2">
                  <% if book.notes.exists? %>
                    <small class="text-muted">最終更新 : <%= l book.notes.last.created_at, format: :date %></small>
                  <% else %>
                    <small class="text-muted">最終更新 : <%= l book.created_at, format: :date %></small>
                  <% end %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

