<%= render "shared/header" %>
<div class="mypage-wrapper">
  <div class="side-wrapper">
    <%= render "shared/sidebar"%> 
  </div>
  <div class="new-book-wrapper d-flex">
  <%= form_with model: @book, class: 'new-book-main', local: true do |f| %>
    <div class="new-book-container">
      <div class="h2 new-books-head">新しいBook</div>
      <div class="new-book-form">
      <%= render "shared/error_messages", model: f.object %>
        <div class="new-book-title mb-4">
          <%= f.label :youtube_url, "YouTubeのURL" %>
          <%= f.text_field :youtube_id, id: "youtube_url", placeholder: "YouTube動画のURL", class: "form-control rounded-4", autofocus: true %>
        </div>
        <div class="new-book-url mb-4">
          <%= f.label :title, "タイトル(必須)" %>
          <%= f.text_field :title, id: "book", placeholder: "タイトル", class: "form-control rounded-4"%>
        </div>
        <div class="new-book-description mb-4">
          <%= f.label :description, "概要(300字まで)" %>
          <%= f.text_area :description, id: "description", placeholder: "Bookの概要", class: "form-control rounded-4",rows:"4" ,maxlength:"300" %>
        </div>
        <div class="d-flex justify-content-end">
          <div class="d-flex align-items-center fw-bold">新規ブックを開く</div>
          <div class=" d-flex me-3 new-book-submit-button">
            <i class="fal fa-plus fs-3 form-plus-icon"></i>
            <label class="book-submit" id="book_submit">
              <i class="fas fa-book-open form-book-icon"></i>
              <%= f.submit "ブックを開く", id:"book_submit", class: "mb-2 btn btn-lg rounded-4 btn-primary visually-hidden" %>
            </label>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
