<div class="wrapper">
  <div class="header">  
    <%= render "shared/header" %>
  </div>
  <div class="top_page-wrapper">
    <div class="side-wrapper">
       <% if @room %>
        <%= render "shared/rooms_sidebar" %> 
      <% else %>
        <%= render "shared/sidebar" %> 
      <% end %>
    </div>
  
    <div class="edit-book-wrapper d-flex">
      <div class="edit-book-container">
      <%= form_with model: @book, url: @url, class: 'edit-book-main', local: true do |f| %>
        <div class="h2 edit-books-head"><span class="text-danger">B</span>ookの編集</div>
        <div class="edit-book-form">
        <%= render "shared/error_messages", model: f.object %>
          <div class="edit-book-title mb-4">
            <%= f.label :title, "タイトル(必須)" %>
            <%= f.text_field :title, id: "book", placeholder: "タイトル", class: "form-control rounded-4"%>
          </div>
          <div class="edit-book-description mb-4">
            <%= f.label :description, "概要(300字まで)" %>
            <%= f.text_area :description, id: "description", placeholder: "Bookの概要", class: "form-control rounded-4",rows:"4" ,maxlength:"300" %>
          </div>
          <div class="d-flex justify-content-end">
            <div class="d-flex align-items-center fw-bold">ブックを編集する</div>
            <div class=" d-flex me-3 edit-book-submit-button">
              <label class="book-submit" id="book_submit">
                <i class="fas fa-edit form-book-icon"></i>
                <%= f.submit "ブックを編集する", id:"book_submit", class: "mb-2 btn btn-lg rounded-4 btn-primary visually-hidden" %>
              </label>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>

  </div>
</div>
